<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lazy.vm.mapper.GroupAnswerMapper">

    <resultMap type="GroupAnswer" id="GroupAnswerResult">
        <result property="groupId" column="group_id"/>
        <result property="answerId" column="answer_id"/>
        <result property="score" column="score"/>
    </resultMap>

    <sql id="selectGroupAnswerVo">
        select group_id, answer_id, score
        from edu_group_answer
    </sql>

    <select id="selectGroupAnswerList" parameterType="GroupAnswer" resultMap="GroupAnswerResult">
        <include refid="selectGroupAnswerVo"/>
        <where>
            <if test="answerId != null  and answerId != ''">and answer_id = #{answerId}</if>
            <if test="score != null  and score != ''">and score = #{score}</if>
        </where>
    </select>

    <select id="selectGroupAnswerByGroupId" resultType="com.lazy.vm.domain.GroupAnswer">
        <include refid="selectGroupAnswerVo"/>
        where group_id = #{groupId}
    </select>

    <select id="selectGroupAnswerById" parameterType="String" resultMap="GroupAnswerResult">
        <include refid="selectGroupAnswerVo"/>
        where group_id = #{groupId}
    </select>

    <insert id="insertGroupAnswer" parameterType="GroupAnswer">
        insert into edu_group_answer
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="groupId != null">group_id,</if>
            <if test="answerId != null">answer_id,</if>
            <if test="score != null">score,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="groupId != null">#{groupId},</if>
            <if test="answerId != null">#{answerId},</if>
            <if test="score != null">#{score},</if>
        </trim>
    </insert>

    <update id="updateGroupAnswer" parameterType="GroupAnswer">
        update edu_group_answer
        <trim prefix="SET" suffixOverrides=",">
            <if test="answerId != null">answer_id = #{answerId},</if>
            <if test="score != null">score = #{score},</if>
        </trim>
        where group_id = #{groupId}
    </update>

    <delete id="deleteGroupAnswerById" parameterType="String">
        delete
        from edu_group_answer
        where group_id = #{groupId}
    </delete>

    <delete id="deleteGroupAnswerByIds" parameterType="String">
        delete from edu_group_answer where group_id in
        <foreach item="groupId" collection="array" open="(" separator="," close=")">
            #{groupId}
        </foreach>
    </delete>
</mapper>

